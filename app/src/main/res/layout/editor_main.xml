<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindows"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:height="72dp"
            android:background="#FFFFFF"
            android:elevation="14sp"
            android:ems="50"
            android:hint="@string/_text_help"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingLeft="16dp"
            android:paddingRight="20dp"
            android:textColor="#455444"
            tools:ignore="RtlHardcoded,RtlSymmetry,UnusedAttribute" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="-32px"
        android:background="@color/colorWindows">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:minHeight="48dp"
            android:paddingLeft="32dp"
            android:text="@string/transfer_suggestion"
            tools:ignore="RtlHardcoded,RtlSymmetry" />
    </android.support.v7.widget.CardView>
</LinearLayout>
