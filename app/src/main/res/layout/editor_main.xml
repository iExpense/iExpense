<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D1D1D1"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:elevation="@dimen/com_facebook_likeview_text_size"
        app:cardElevation="16dp">

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:height="72dp"
            android:background="@drawable/textlines"
            android:elevation="14sp"
            android:ems="50"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:minHeight="48dp"
            android:shadowDy="@android:integer/status_bar_notification_info_maxnum"
            android:shadowRadius="@integer/google_play_services_version" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="72dp"></ListView>
    </android.support.v7.widget.CardView>
</RelativeLayout>
